<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#5E5959"
    android:foregroundTint="#686565">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Channel 1"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/chart1"
        app:layout_constraintStart_toStartOf="@id/chart1"
        app:layout_constraintTop_toTopOf="parent" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        app:layout_constraintDimensionRatio="W, 1:2"
        app:layout_constraintEnd_toStartOf="@id/chart2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textTitle" />

    <TextView
        android:id="@+id/textTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Channel 2"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/chart2"
        app:layout_constraintStart_toStartOf="@id/chart2"
        app:layout_constraintTop_toTopOf="@id/textTitle" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        app:layout_constraintDimensionRatio="W, 1:2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/chart1"
        app:layout_constraintTop_toBottomOf="@id/textTitle2" />

    <TextView
        android:id="@+id/textTitle3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Channel 3"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/chart3"
        app:layout_constraintStart_toStartOf="@id/chart3"
        app:layout_constraintTop_toBottomOf="@id/chart1" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        app:layout_constraintDimensionRatio="W, 1:2"
        app:layout_constraintEnd_toStartOf="@id/chart4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textTitle3" />

    <TextView
        android:id="@+id/textTitle4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Channel 4"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/chart4"
        app:layout_constraintStart_toStartOf="@id/chart4"
        app:layout_constraintTop_toTopOf="@id/textTitle3" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        app:layout_constraintDimensionRatio="W, 1:2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/chart3"
        app:layout_constraintTop_toBottomOf="@id/textTitle3" />

    <TextView
        android:id="@+id/textTitle5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Channel 5"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/chart5"
        app:layout_constraintStart_toStartOf="@id/chart5"
        app:layout_constraintTop_toBottomOf="@id/chart3" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        app:layout_constraintDimensionRatio="W, 1:2"
        app:layout_constraintEnd_toStartOf="@id/chart6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textTitle5" />

    <TextView
        android:id="@+id/textTitle6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Channel 6"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/chart6"
        app:layout_constraintStart_toStartOf="@id/chart6"
        app:layout_constraintTop_toTopOf="@id/textTitle5" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        app:layout_constraintDimensionRatio="W, 1:2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/chart5"
        app:layout_constraintTop_toBottomOf="@id/textTitle6" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart7"
        android:layout_width="367dp"
        android:layout_height="105dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chart5" />

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#4C4A4A"
        android:buttonTint="#3E3D3D"
        android:checked="false"
        android:shadowColor="#3E3C3C"
        android:text="開啟"
        android:textColor="#535050"
        android:textColorHighlight="#393737"
        android:textColorHint="#515050"
        android:textColorLink="#0C0C0C"
        app:layout_constraintBaseline_toBaselineOf="@+id/textTitle"
        app:layout_constraintStart_toEndOf="@+id/textTitle" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="#3E3D3D"
        android:checked="false"
        android:text="開啟"
        app:layout_constraintBaseline_toBaselineOf="@+id/textTitle2"
        app:layout_constraintStart_toEndOf="@+id/textTitle2" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="#3E3D3D"
        android:checked="false"
        android:text="開啟"
        app:layout_constraintBaseline_toBaselineOf="@+id/textTitle3"
        app:layout_constraintStart_toEndOf="@+id/textTitle3" />

    <CheckBox
        android:id="@+id/checkBox4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="#3E3D3D"
        android:checked="false"
        android:text="開啟"
        app:layout_constraintBaseline_toBaselineOf="@+id/textTitle4"
        app:layout_constraintStart_toEndOf="@+id/textTitle4" />

    <CheckBox
        android:id="@+id/checkBox5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="#3E3D3D"
        android:checked="false"
        android:text="開啟"
        app:layout_constraintBaseline_toBaselineOf="@+id/textTitle5"
        app:layout_constraintStart_toEndOf="@+id/textTitle5" />

    <CheckBox
        android:id="@+id/checkBox6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="#3E3D3D"
        android:checked="false"
        android:focusable="auto"
        android:text="開啟"
        app:layout_constraintBaseline_toBaselineOf="@+id/textTitle6"
        app:layout_constraintStart_toEndOf="@+id/textTitle6" />

</androidx.constraintlayout.widget.ConstraintLayout>