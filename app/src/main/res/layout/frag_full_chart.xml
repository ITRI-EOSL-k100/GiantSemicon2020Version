<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Channel 1"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/chart"
        app:layout_constraintStart_toStartOf="@id/chart"
        app:layout_constraintTop_toTopOf="parent" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        app:layout_constraintDimensionRatio="W, 1:2"
        app:layout_constraintEnd_toStartOf="@id/chart2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textTitle" />

    <TextView
        android:id="@+id/textTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Channel 2"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/chart2"
        app:layout_constraintStart_toStartOf="@id/chart2"
        app:layout_constraintTop_toTopOf="@id/textTitle" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        app:layout_constraintDimensionRatio="W, 1:2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/chart"
        app:layout_constraintTop_toBottomOf="@id/textTitle2" />

    <TextView
        android:id="@+id/textTitle3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Channel 3"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/chart3"
        app:layout_constraintStart_toStartOf="@id/chart3"
        app:layout_constraintTop_toBottomOf="@id/chart" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        app:layout_constraintDimensionRatio="W, 1:2"
        app:layout_constraintEnd_toStartOf="@id/chart4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textTitle3" />

    <TextView
        android:id="@+id/textTitle4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Channel 4"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/chart4"
        app:layout_constraintStart_toStartOf="@id/chart4"
        app:layout_constraintTop_toTopOf="@id/textTitle3" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        app:layout_constraintDimensionRatio="W, 1:2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/chart3"
        app:layout_constraintTop_toBottomOf="@id/textTitle3" />

    <TextView
        android:id="@+id/textTitle5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Channel 5"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/chart5"
        app:layout_constraintStart_toStartOf="@id/chart5"
        app:layout_constraintTop_toBottomOf="@id/chart3" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        app:layout_constraintDimensionRatio="W, 1:2"
        app:layout_constraintEnd_toStartOf="@id/chart6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textTitle5" />

    <TextView
        android:id="@+id/textTitle6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Channel 6"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/chart6"
        app:layout_constraintStart_toStartOf="@id/chart6"
        app:layout_constraintTop_toTopOf="@id/textTitle5" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        app:layout_constraintDimensionRatio="W, 1:2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/chart5"
        app:layout_constraintTop_toBottomOf="@id/textTitle6" />

</androidx.constraintlayout.widget.ConstraintLayout>